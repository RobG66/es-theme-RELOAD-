<image name="video shadow" ifSubset="Video:ON" extra="true">
<pos>0 0</pos>
<size>1 1</size>
<path>./art/wheel/video shadow.png</path>
<zIndex>3</zIndex>
<storyboard>
<animation property="opacity" from="0" to="0" begin="0" duration="500" mode="linear"/>
<animation property="opacity" from="0" to="1" begin="1800" duration="1000" mode="linear"/>
</storyboard>
</image>
-->

</view>
 
</theme>
